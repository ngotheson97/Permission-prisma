type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String
  posts: [Post!]!
  role: Role! @default(value: CUSTOMER)
}

enum Role {
  ADMIN
  CUSTOMER
}